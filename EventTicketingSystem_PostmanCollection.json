{
  "info": {
    "name": "Event Ticketing System API",
    "description": "Complete API collection for Event Ticketing & Seat Reservation System Assignment",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url_user",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "base_url_catalog",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "base_url_seating",
      "value": "http://localhost:3002",
      "type": "string"
    },
    {
      "key": "base_url_order",
      "value": "http://localhost:3003",
      "type": "string"
    },
    {
      "key": "base_url_payment",
      "value": "http://localhost:3004",
      "type": "string"
    },
    {
      "key": "base_url_notification",
      "value": "http://localhost:3005",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. User Service",
      "item": [
        {
          "name": "1.1 Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url_user}}/v1/users/register",
              "host": ["{{base_url_user}}"],
              "path": ["v1", "users", "register"]
            }
          }
        },
        {
          "name": "1.2 User Login (GET TOKEN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user1596@mail.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url_user}}/v1/users/login",
              "host": ["{{base_url_user}}"],
              "path": ["v1", "users", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('jwt_token', jsonData.token);",
                  "    console.log('JWT Token saved: ' + jsonData.token.substring(0, 20) + '...');",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "1.3 Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url_user}}/v1/users/profile",
              "host": ["{{base_url_user}}"],
              "path": ["v1", "users", "profile"]
            }
          }
        },
        {
          "name": "1.4 Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Updated\",\n  \"phone\": \"9876543210\"\n}"
            },
            "url": {
              "raw": "{{base_url_user}}/v1/users/profile",
              "host": ["{{base_url_user}}"],
              "path": ["v1", "users", "profile"]
            }
          }
        },
        {
          "name": "1.5 Get All Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_user}}/v1/users",
              "host": ["{{base_url_user}}"],
              "path": ["v1", "users"]
            }
          }
        },
        {
          "name": "1.6 User Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_user}}/v1/users/health",
              "host": ["{{base_url_user}}"],
              "path": ["v1", "users", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Catalog Service",
      "item": [
        {
          "name": "2.1 Get All Events",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_catalog}}/v1/events",
              "host": ["{{base_url_catalog}}"],
              "path": ["v1", "events"]
            }
          }
        },
        {
          "name": "2.2 Filter Events by City",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_catalog}}/v1/events?city=London",
              "host": ["{{base_url_catalog}}"],
              "path": ["v1", "events"],
              "query": [
                {
                  "key": "city",
                  "value": "London"
                }
              ]
            }
          }
        },
        {
          "name": "2.3 Filter Events by Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_catalog}}/v1/events?status=ACTIVE",
              "host": ["{{base_url_catalog}}"],
              "path": ["v1", "events"],
              "query": [
                {
                  "key": "status",
                  "value": "ACTIVE"
                }
              ]
            }
          }
        },
        {
          "name": "2.4 Filter Events by Type",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_catalog}}/v1/events?type=Concert",
              "host": ["{{base_url_catalog}}"],
              "path": ["v1", "events"],
              "query": [
                {
                  "key": "type",
                  "value": "Concert"
                }
              ]
            }
          }
        },
        {
          "name": "2.5 Get All Venues",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_catalog}}/v1/venues",
              "host": ["{{base_url_catalog}}"],
              "path": ["v1", "venues"]
            }
          }
        },
        {
          "name": "2.6 Filter Venues by City",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_catalog}}/v1/venues?city=Paris",
              "host": ["{{base_url_catalog}}"],
              "path": ["v1", "venues"],
              "query": [
                {
                  "key": "city",
                  "value": "Paris"
                }
              ]
            }
          }
        },
        {
          "name": "2.7 Catalog Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_catalog}}/v1/catalog/health",
              "host": ["{{base_url_catalog}}"],
              "path": ["v1", "catalog", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Seating Service",
      "item": [
        {
          "name": "3.1 Check Seat Availability",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_seating}}/v1/seats/availability/1",
              "host": ["{{base_url_seating}}"],
              "path": ["v1", "seats", "availability", "1"]
            }
          }
        },
        {
          "name": "3.2 Reserve Seats (CRITICAL)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"seatIds\": [1, 2, 3]\n}"
            },
            "url": {
              "raw": "{{base_url_seating}}/v1/seats/reserve",
              "host": ["{{base_url_seating}}"],
              "path": ["v1", "seats", "reserve"]
            }
          }
        },
        {
          "name": "3.3 Release Seats (CRITICAL)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"seatIds\": [1, 2, 3]\n}"
            },
            "url": {
              "raw": "{{base_url_seating}}/v1/seats/release",
              "host": ["{{base_url_seating}}"],
              "path": ["v1", "seats", "release"]
            }
          }
        },
        {
          "name": "3.4 Seating Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_seating}}/health",
              "host": ["{{base_url_seating}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Order Service",
      "item": [
        {
          "name": "4.1 Create Order (CRITICAL)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "order-{{$randomUUID}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": 1,\n  \"event_id\": 1,\n  \"seat_ids\": [10, 11, 12]\n}"
            },
            "url": {
              "raw": "{{base_url_order}}/v1/orders",
              "host": ["{{base_url_order}}"],
              "path": ["v1", "orders"]
            }
          }
        },
        {
          "name": "4.2 Get All Orders",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_order}}/v1/orders",
              "host": ["{{base_url_order}}"],
              "path": ["v1", "orders"]
            }
          }
        },
        {
          "name": "4.3 Get Order by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_order}}/v1/orders/1",
              "host": ["{{base_url_order}}"],
              "path": ["v1", "orders", "1"]
            }
          }
        },
        {
          "name": "4.4 Order Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_order}}/health",
              "host": ["{{base_url_order}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Payment Service",
      "item": [
        {
          "name": "5.1 Process Payment (CRITICAL)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "payment-{{$randomUUID}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_id\": 1,\n  \"amount\": 150.00,\n  \"method\": \"CREDIT_CARD\"\n}"
            },
            "url": {
              "raw": "{{base_url_payment}}/v1/payments/charge",
              "host": ["{{base_url_payment}}"],
              "path": ["v1", "payments", "charge"]
            }
          }
        },
        {
          "name": "5.2 Get All Payments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_payment}}/v1/payments",
              "host": ["{{base_url_payment}}"],
              "path": ["v1", "payments"]
            }
          }
        },
        {
          "name": "5.3 Get Payment by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_payment}}/v1/payments/1",
              "host": ["{{base_url_payment}}"],
              "path": ["v1", "payments", "1"]
            }
          }
        },
        {
          "name": "5.4 Payment Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_payment}}/v1/payments/health",
              "host": ["{{base_url_payment}}"],
              "path": ["v1", "payments", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "6. Notification Service",
      "item": [
        {
          "name": "6.1 Send Email (CRITICAL)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": \"customer@example.com\",\n  \"subject\": \"Order Confirmation\",\n  \"text\": \"Your order has been confirmed. Thank you for your purchase!\"\n}"
            },
            "url": {
              "raw": "{{base_url_notification}}/v1/notifications/email",
              "host": ["{{base_url_notification}}"],
              "path": ["v1", "notifications", "email"]
            }
          }
        },
        {
          "name": "6.2 Get Prometheus Metrics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_notification}}/metrics",
              "host": ["{{base_url_notification}}"],
              "path": ["metrics"]
            }
          }
        },
        {
          "name": "6.3 Notification Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url_notification}}/health",
              "host": ["{{base_url_notification}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}